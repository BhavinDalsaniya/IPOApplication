# ===================================================================
# Environment Variables Template
# Copy this to .env.local for local development
# Copy this to .env for production
# ===================================================================

# -------------------------------------------------------------------
# DATABASE CONNECTION
# -------------------------------------------------------------------
# For Local Development (SQLite):
# DATABASE_URL="file:./dev.db"

# For Production (Supabase/Neon/Railway):
# DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@aws-0-ap-south-1.pooler.supabase.com:6543/postgres"

# Direct Connection (for migrations):
# DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@aws-0-ap-south-1.pooler.supabase.com:5432/postgres"

# -------------------------------------------------------------------
# CRON & SECURITY
# -------------------------------------------------------------------
CRON_SECRET="change-this-to-a-random-secure-string"

# -------------------------------------------------------------------
# APP URL
# -------------------------------------------------------------------
# Local:
# NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Production (update with your EC2 IP or domain):
# NEXT_PUBLIC_APP_URL="http://your-ec2-ip:3000"
# NEXT_PUBLIC_APP_URL="https://your-domain.com"

# -------------------------------------------------------------------
# SUPABASE SPECIFIC (if using Supabase)
# -------------------------------------------------------------------
# NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
# NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
